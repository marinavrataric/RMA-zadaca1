<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mvrataric.ferit.hr.zadaca01.MainActivity"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/iwGosling"
        android:src="@drawable/gosling"
        android:layout_width="140dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvInfo1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/iwGosling"
        app:layout_constraintBottom_toBottomOf="@+id/iwGosling"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/person1Description"
        android:background="@color/colorAccent"/>


    <ImageView
        android:id="@+id/iwJobs"
        android:src="@drawable/jobs"
        android:layout_width="140dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/iwGosling"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvInfo2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/iwJobs"
        app:layout_constraintBottom_toBottomOf="@+id/iwJobs"
        app:layout_constraintLeft_toRightOf="@+id/iwJobs"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/person2Description"
        android:background="@color/colorAccent"/>

    <ImageView
        android:id="@+id/iwRubin"
        android:src="@drawable/andy_rubin"
        android:layout_width="140dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/iwJobs"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/tvInfo3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/iwRubin"
        app:layout_constraintTop_toTopOf="@+id/iwRubin"
        app:layout_constraintBottom_toBottomOf="@+id/iwRubin"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/person3Description"
        android:background="@color/colorAccent"/>

</android.support.constraint.ConstraintLayout>

